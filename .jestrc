{
  "testRegex": "(/test/.*|(\\.|/))\\.spec\\.js?$",
  "setupTestFrameworkScriptFile": "<rootDir>/test/__setup__.js",
  "collectCoverage": true,
  "coveragePathIgnorePatterns": [
    "<rootDir>/test",
    "<rootDir>/node_modules",
    "<rootDir>/coverage",
    "<rootDir>/build"
  ],
  "coverageReporters": ["lcov"],
  "coverageThreshold": {
    "global": {
      "branches": 30,
      "functions": 30,
      "lines": 30,
      "statements": 30
    }
  },
  "moduleFileExtensions": [
    "js",
    "json"
  ],
  "modulePathIgnorePatterns": [
    "<rootDir>/node_modules",
    "<rootDir>/coverage",
    "<rootDir>/build"
  ],
  "moduleNameMapper": {
    "^.+\\.(scss)$": "<rootDir>/node_modules/jest-css-modules"
  }
}
